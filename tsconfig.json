{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",  // Temel dizini belirtin
    "paths": {
      "@/*": ["./*"]  // '@' sembolünü kullanarak modülleri kolayca içe aktarmak için
    }
  },
  "include": [
    "index.tsx",
    "components/**/*.tsx",
    "screens/**/*.tsx",
    "navigation/**/*.tsx",
    "constants/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
